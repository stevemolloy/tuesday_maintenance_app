extends layout

block content
    main
      form(action="/new_task")
        button Add a new maintenance task
      div.card
        div.cardcontainer
          h2 Scheduled for week number:
            b= report.week_number
          p Reported by: 
            b= report.reporter
          p Reported: 
            b= report.datetime
          p Affected location(s):
            b= report.where
          p Task: 
            b= report.task
