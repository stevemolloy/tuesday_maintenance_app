extends layout

block content
  div#container
    header
      a(href="/")
        h1= title
    main
      form(action="/new_report")
        button Report a fault
      div.card
        div.cardcontainer
          h2
            b= report.datetime
          p Reported by: 
            b= report.reporter
          each comment, index in report.comment
            div.comment
              h3 Comment #{index + 1}:
              h4 #{comment.datetime}
              p= comment.comment
          div.comment
            h3 Add a new comment
            div.newcomment
              form
                textarea(rows=6)
                button Submit
    footer
      p I am a footer
