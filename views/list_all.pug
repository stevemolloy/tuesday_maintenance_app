extends layout

block content
  main
    form(action="/new_task")
      button Add a new maintenance task
    div.centeredselect
      select.field-select
        option(value="week_number", selected) Week number
        each week_number in week_numbers
          - var d = "location.href='/summary/week_number/" + week_number + "';"
          option(onclick=d, value=week_number)= week_number
    div.report_table
      h1 Interventions that require access to Linac, R11, and/or R31
      table#faulttable
        tr
          th 
          th Week
          th Reporter
          th Affected location(s)
          th Responsible
          th Approved?
          th Comment
          each datum, index in linac_data
            - var d = "location.href='/api/get/" + linac_ids[index] + "';"
            tr(onclick=d)
              td= index+1
              each cell in datum
                td= cell

